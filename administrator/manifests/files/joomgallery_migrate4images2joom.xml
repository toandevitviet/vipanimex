<?xml version="1.0" encoding="utf-8"?>
<extension type="file" version="3.0" method="upgrade">
  <name>Migration Script from 4Images gallery to JoomGallery</name>
  <creationDate>2013/05/15</creationDate>
  <author>JoomGallery::ProjectTeam</author>
  <copyright>This component is released under the GNU/GPL License</copyright>
  <authorEmail>team@joomgallery.net</authorEmail>
  <authorUrl>http://www.joomgallery.net</authorUrl>
  <version>3.0 BETA</version>
  <description>This script is able to migrate 4Images gallery to JoomGallery.</description>
  <fileset>
    <files target="administrator/components/com_joomgallery/helpers/migration">
      <file>migrate4images2joom.php</file>
      <file>migrate4images2joom.xml</file>
    </files>
  </fileset>
  <languages folder="language" client="administrator">
    <language tag="de-DE" client="administrator">de-DE/de-DE.com_joomgallery.migrate4images2joom.ini</language>
    <language tag="en-GB" client="administrator">en-GB/en-GB.com_joomgallery.migrate4images2joom.ini</language>
  </languages>
  <updateservers>
    <server type="collection" priority="1" name="JoomGallery Update Service">http://en.joomgallery.net/components/com_newversion/xml/joomgallery3.xml</server>
  </updateservers>
</extension>